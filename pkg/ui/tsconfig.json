{
  "extends": "../tsconfig.hanzo.base.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "bin",
    "test"
  ],
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "rootDir": "./src",
    "types": ["node"],
    "verbatimModuleSyntax": false
  }
}
